{
  "version": 2,
  "installCommand": "npm ci --legacy-peer-deps",
  "buildCommand": "echo 'No build step required'",
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/server.js",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "PATCH",
        "OPTIONS"
      ]
    }
  ],
  "env": {
    "NODE_VERSION": "18.x"
  }
}